{$R *.dfm}

procedure TDataModuleFTPDBDaemon.IBDatabase1AfterConnect(Sender: TObject);
var i: Integer;
begin
  for i:=0 to IBDatabase1.DataSetCount-1 do
    try IBDatabase1.DataSets[i].Active:=True except end;
end;

end.
